   end Compiler;

   package Builder is
      for Default_Switches ("ada") use ("-v", "-gnatf", "-gnatwa", "-g", "-m", "-k");
   end Builder;

   package Ide is
      for Default_Switches ("adacontrol") use ("-f", "C:\donnees\profess\ada\programmes\semtools\adacontrol\src\verif.aru", "@units.txt", "-o", "result.csv", "-F", "gnat_short");
   end Ide;

end Adalog_Comps;

