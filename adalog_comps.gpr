project Adalog_Comps is

   for Source_Dirs use ("string_matching", "binary_map", "linear_queue", "options_analyzer", "string_map", "variable_length", "mysql");
   for Object_Dir use "adalib";
   for Main use ("t_string_map.adb");

   package Pretty_Printer is
      for Default_Switches ("ada") use ("-M100");
   end Pretty_Printer;

   package Linker is
      for Default_Switches ("ada") use ("-g", "-Wl,--gc-sections");
   end Linker;

   package Binder is
      for Default_Switches ("ada") use ("-g", "-E");
   end Binder;

   package Compiler is
